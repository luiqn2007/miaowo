<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.miaowo.miaowo.activity.Test">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="好奇喵API测试"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/b_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="更新用户"
        android:onClick="updateUser"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/b_del"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/b_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注销用户"
        android:onClick="deleteUser"
        app:layout_constraintBottom_toBottomOf="@+id/b_user"
        app:layout_constraintLeft_toRightOf="@+id/b_user"
        app:layout_constraintRight_toLeftOf="@+id/b_pwd"
        app:layout_constraintTop_toTopOf="@+id/b_user" />

    <Button
        android:id="@+id/b_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户改密"
        android:onClick="changePwd"
        app:layout_constraintBottom_toBottomOf="@+id/b_del"
        app:layout_constraintLeft_toRightOf="@+id/b_del"
        app:layout_constraintRight_toLeftOf="@+id/b_nw"
        app:layout_constraintTop_toTopOf="@+id/b_del" />

    <Button
        android:id="@+id/b_nw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取关用户"
        android:onClick="unfollowUser"
        app:layout_constraintBottom_toBottomOf="@+id/b_pwd"
        app:layout_constraintLeft_toRightOf="@+id/b_pwd"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/b_pwd" />

    <Button
        android:id="@+id/b_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="聊天信息"
        android:onClick="sendChat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/b_dtoken"
        app:layout_constraintTop_toBottomOf="@+id/b_user" />

    <Button
        android:id="@+id/b_dtoken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除令牌"
        android:onClick="deleteToken"
        app:layout_constraintBottom_toBottomOf="@+id/b_chat"
        app:layout_constraintLeft_toRightOf="@+id/b_chat"
        app:layout_constraintRight_toLeftOf="@+id/b_ltoken"
        app:layout_constraintTop_toTopOf="@+id/b_chat" />

    <Button
        android:id="@+id/b_ltoken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="令牌列表"
        android:onClick="listToken"
        app:layout_constraintBottom_toBottomOf="@+id/b_dtoken"
        app:layout_constraintTop_toTopOf="@+id/b_dtoken"
        app:layout_constraintRight_toLeftOf="@+id/b_ntoken"
        app:layout_constraintLeft_toRightOf="@+id/b_dtoken" />

    <Button
        android:id="@+id/b_ntoken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新令牌"
        android:onClick="newToken"
        app:layout_constraintBottom_toBottomOf="@+id/b_ltoken"
        app:layout_constraintTop_toTopOf="@+id/b_ltoken"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/b_ltoken" />

    <Button
        android:id="@+id/b_ntopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新主题"
        android:onClick="newTopic"
        app:layout_constraintRight_toLeftOf="@+id/b_etopic"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/b_chat" />

    <Button
        android:id="@+id/b_etopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更改主题"
        android:onClick="editTopic"
        app:layout_constraintBottom_toBottomOf="@+id/b_ntopic"
        app:layout_constraintTop_toTopOf="@+id/b_ntopic"
        app:layout_constraintRight_toLeftOf="@+id/b_dtopic"
        app:layout_constraintLeft_toRightOf="@+id/b_ntopic" />

    <Button
        android:id="@+id/b_dtopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除主题"
        android:onClick="deleteTopic"
        app:layout_constraintBottom_toBottomOf="@+id/b_etopic"
        app:layout_constraintTop_toTopOf="@+id/b_etopic"
        app:layout_constraintRight_toLeftOf="@+id/b_rtopic"
        app:layout_constraintLeft_toRightOf="@+id/b_etopic" />

    <Button
        android:id="@+id/b_rtopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订阅主题"
        android:onClick="registerTopic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/b_dtopic"
        app:layout_constraintTop_toTopOf="@+id/b_dtopic"
        app:layout_constraintLeft_toRightOf="@+id/b_dtopic" />

    <Button
        android:id="@+id/b_utopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消订阅"
        android:onClick="unregisterTopic"
        app:layout_constraintRight_toLeftOf="@+id/b_edoc"
        app:layout_constraintBottom_toBottomOf="@+id/b_edoc"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/b_edoc" />

    <Button
        android:id="@+id/b_edoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编辑帖子"
        android:onClick="editPost"
        app:layout_constraintBottom_toBottomOf="@+id/b_ddoc"
        app:layout_constraintTop_toTopOf="@+id/b_ddoc"
        app:layout_constraintRight_toLeftOf="@+id/b_ddoc"
        app:layout_constraintLeft_toRightOf="@+id/b_utopic" />

    <Button
        android:id="@+id/b_ddoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除帖子"
        android:onClick="deletePost"
        app:layout_constraintBottom_toBottomOf="@+id/b_file"
        app:layout_constraintTop_toTopOf="@+id/b_file"
        app:layout_constraintRight_toLeftOf="@+id/b_file"
        app:layout_constraintLeft_toRightOf="@+id/b_edoc" />

    <Button
        android:id="@+id/b_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="上传文件"
        android:onClick="updateFile"
        app:layout_constraintLeft_toRightOf="@+id/b_ddoc"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_rtopic" />

    <Button
        android:id="@+id/b_nuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新建用户"
        android:onClick="newUser"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/b_utopic"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="8dp" />

    <Button
        android:id="@+id/b_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关注用户"
        android:onClick="followUser"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/b_edoc"
        app:layout_constraintLeft_toRightOf="@+id/b_nuser"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_nuser"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintRight_toLeftOf="@+id/b_follow"
        android:layout_marginRight="8dp" />

</android.support.constraint.ConstraintLayout>
